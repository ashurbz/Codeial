<header class="header">
  <div
    class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-2 bg-secondary border-bottom shadow-sm " style="height: 4vw;"
  >
    <h5 class="my-0  mr-md-auto font-weight-normal"> <img src="/images/logo.png " alt="" width="100" height="100"> </h5>
    <nav class="my-2 my-md-0 mr-md-3">
      <% if(locals.user){ %>
      <a class="p-2 text-dark" href="/user/profile"><%= user.name %></a>
      <a class="p-2 text-dark" href="/user/logout"
        ><button type="submit" class="btn btn-outline-danger">Sign Out</button></a
      >

      <a class="p-2 text-dark" href="/"
        ><button type="submit" class="btn btn-outline-primary">Home</button></a
      >
      <%}else{%>
      <a class="p-2 text-dark" href="/user/sign-in"
        ><button type="submit" class="btn btn-outline-success">Sign In</button></a
      >
    </nav>
    <a class="btn btn-outline-primary" href="/user/sign-up">Sign up</a>
  </div>

  <% } %>
</header>

